<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JokerAppDev" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    -->
    <style name="Theme.JokerAppDev.AppbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.JokerAppDev.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Tema usado para configurar o splash screen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Modifica a cor de fundo-->
        <item name="windowSplashScreenBackground">@color/blue_700</item>
        <!-- Seleciona a imagem da logo-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!--Tempo que a animacao ira ficar visivel em milisegundos -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Tema que sera carregado depois que a splashScreen acabar-->
        <item name="postSplashScreenTheme">@style/Theme.JokerAppDev</item>
        <!--Apos esses ajustes eh preciso modificar o manifest (tanto da tag application quanto em activity)
         para que o tema de entrada seja o  Theme.App.Starting-->
    </style>
</resources>